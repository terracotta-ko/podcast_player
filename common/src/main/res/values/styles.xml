<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextAppearance   -->

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.XSmall">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Header.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>